<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>Simple logger implementation for dotnet core 2.2</Description>
        <PackageProjectUrl>https://github.com/amir734jj/Simple-aspnet-core-logger</PackageProjectUrl>
        <Version>1.0.0</Version>
        <PackageReleaseNotes>Working state</PackageReleaseNotes>
        <AssemblyName>Simple-aspnet-core-logger</AssemblyName>
        <RootNamespace>SimpleLogger</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Hosting.Abstractions" Version="2.2.0" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.2.0" />
    </ItemGroup>

</Project>
